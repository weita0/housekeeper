extends layout

block content
	h1 Employee Management System
	h2 Register
	form(action="/employee/reg", method="post")
		label(for="name") Name:
		input(type="text", name="name")
		br
		label(for="password") Password:
		input(type="password", name="password")
		br
		label(for="gender") Gender:
		input(type="radio", name="gender", value="m") 
		|male
		input(type="radio", name="gender", value="f") 
		|female
		br
		label(for="birth") birthday:
		input(type="text", name="birth")
		br
		label(for="locate") locate:
		input(type="text", name="locate")
		br
		label(for="idnum") ID Card Number:
		input(type="idnum", name="idnum")
		br
		label(for="type") Type:
		input(type="radio", name="type", value="wa")
		|washing
		input(type="radio", name="type", value="la")
		|laundry
		input(type="radio", name="type", value="ba")
		|babysitting
		input(type="radio", name="type", value="nu")
		|nurse 
		br
		input(type="submit", value="提交")
	h2 Log in
	form(action="/employee/login" method="post")
		label(for="workid") workid  
		input(type="text" name="workid")
		br
		label(for="password") password
		input(type="password" name="password")
		br
		input(type="submit" value="submit")